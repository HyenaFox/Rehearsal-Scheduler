# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/rehearsal-scheduler
# For production MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/rehearsal-scheduler

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google OAuth Configuration for Calendar Integration
GOOGLE_CLIENT_ID=your-google-oauth-client-id-from-cloud-console
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret-from-cloud-console
GOOGLE_REDIRECT_URI=http://localhost:3000/api/calendar/auth/google/callback
# For production: https://your-backend-domain.com/api/calendar/auth/google/callback

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional: For debugging
DEBUG=*
