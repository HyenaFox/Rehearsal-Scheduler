rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to create users (needed for signup and initial admin creation)
    match /users/{userId} {
      allow read, write: if true;
    }
    
    match /userProfiles/{userId} {
      allow read, write: if true;
    }
    
    // Allow authenticated users to read/write shared data
    match /rehearsals/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /scenes/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /timeslots/{document} {
      allow read, write: if request.auth != null;
    }
  }
}